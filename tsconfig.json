{
  "compilerOptions": {
     "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es2023"],
    "types": ["node"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
     "baseUrl": "./src",
    "paths": {
      "@middlewares/*": ["middlewares/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"]
    }
  },
  "include": ["src"]
}
